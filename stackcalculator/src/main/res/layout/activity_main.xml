<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/txt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btn_point"
            android:layout_alignRight="@+id/btn_equal"
            android:layout_alignEnd="@+id/btn_equal" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:text="+"
            android:layout_below="@+id/txt_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_plus"
            android:layout_alignBottom="@+id/btn_plus"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/btn_plus"
            android:layout_toRightOf="@+id/btn_plus"
            android:text="-" />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_minus"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toRightOf="@+id/btn_minus"
            android:text="=" />

        <Button
            android:id="@+id/btn_multiplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_plus"
            android:layout_alignStart="@+id/btn_plus"
            android:layout_below="@+id/btn_plus"
            android:layout_marginTop="12dp"
            android:text="*" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_multiplay"
            android:layout_alignBottom="@+id/btn_multiplay"
            android:layout_alignLeft="@+id/btn_minus"
            android:layout_alignStart="@+id/btn_minus"
            android:text="/" />

        <Button
            android:id="@+id/btn_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_divide"
            android:layout_alignBottom="@+id/btn_divide"
            android:layout_alignLeft="@+id/btn_equal"
            android:layout_alignStart="@+id/btn_equal"
            android:text="." />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_multiplay"
            android:layout_alignStart="@+id/btn_multiplay"
            android:layout_below="@+id/btn_divide"
            android:layout_marginTop="24dp"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_7"
            android:layout_alignBottom="@+id/btn_7"
            android:layout_alignLeft="@+id/btn_divide"
            android:layout_alignStart="@+id/btn_divide"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_8"
            android:layout_alignBottom="@+id/btn_8"
            android:layout_alignLeft="@+id/btn_point"
            android:layout_alignStart="@+id/btn_point"
            android:text="9" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_7"
            android:layout_alignStart="@+id/btn_7"
            android:layout_below="@+id/btn_7"
            android:layout_marginTop="17dp"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_4"
            android:layout_alignBottom="@+id/btn_4"
            android:layout_alignLeft="@+id/btn_8"
            android:layout_alignStart="@+id/btn_8"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_5"
            android:layout_alignBottom="@+id/btn_5"
            android:layout_alignLeft="@+id/btn_9"
            android:layout_alignStart="@+id/btn_9"
            android:text="6" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_4"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/btn_minus"
            android:layout_toStartOf="@+id/btn_minus"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_1"
            android:layout_alignBottom="@+id/btn_1"
            android:layout_alignLeft="@+id/btn_5"
            android:layout_alignStart="@+id/btn_5"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_2"
            android:layout_alignBottom="@+id/btn_2"
            android:layout_alignLeft="@+id/btn_6"
            android:layout_alignStart="@+id/btn_6"
            android:text="3" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_2"
            android:layout_alignStart="@+id/btn_2"
            android:layout_below="@+id/btn_2"
            android:layout_marginTop="15dp"
            android:text="0" />


</RelativeLayout>
